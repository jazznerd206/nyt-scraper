<div class="notes">

</div>


<div class="grid" id="article-container">
    <div class="grid-x">
    {{#if articles}}
      {{#each articles}}
        {{#unless saved}}
          <div class="cell medium-3 small-12">
            <div class="card animated tada" data-id={{_id}} style="width: 300px;">
              <div class="button" id="note-open"> Add Note
              </div>
                <div class="card-divider">
                    <h4>{{title}}</h4>
                </div>
                <a href="{{link}}">Link to Article</a>
                <div class="button save-article" data-id="{{_id}}">
                  <span>Save</span>
                </div>
            </div>
        </div>
        {{/unless}}
      {{/each}}
    {{/if}}
    </div>
</div>

<hr>

<h1>SAVED ARTICLES</h1>

<div class="grid" id="saved-article-container">
    <div class="grid-x">
          {{#if articles}}
            {{#each articles}}
              {{#if saved}}
                <div class="cell medium-3 small-12">
                  <div class="card animated fadeIn" style="width: 300px;">
                    <p><button class="button expanded" data-open="exampleModal1">Add Note</button></p>
                    <div class="reveal" id="exampleModal1" data-reveal>
                      <input type="text" value="" placeholder="Enter Username" id="username">
                      <input type="text" value="" placeholder="Enter Note" id="note">
                      <div class="button" value="submit" id="submit-note" data-id="{{_id}}"></div>
                      <button class="close-button" data-close aria-label="Close modal" type="button">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                      <div class="card-divider">
                          <h4>{{title}}</h4>
                      </div>
                      <a href="{{link}}">Link to Article</a>
                  </div>
              </div>
              {{/if}}
            {{/each}}
          {{/if}}
          </div>
      </div>



<div class="footer">
    <p>NYT Mongo Scraper</p>    
</div>




