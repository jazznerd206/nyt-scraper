<div class="image-container">
      <img src="/images/ScraperIMG.PNG" alt="">
</div>


<div class="grid" id="article-container">
    <div class="grid-x">
      {{#each articles}}
        {{#unless saved}}
          <div class="cell medium-3 small-12">
            <div class="card" style="width: 300px;">
                <div class="card-divider">
                    <h2>{{title}}</h2>
                    <h2>{{_id}}</h2>
                </div>
                <img src="assets/img/generic/rectangle-1.jpg">
                <div class="card-section">
                    <h4>{{link}}</h4>
                    <p>{{summary}}</p>
                </div>
            </div>
        </div>
        {{/unless}}
      {{/each}}
    </div>
</div>

<div class="footer">
    <p>NYT Mongo Scraper</p>    
</div>




